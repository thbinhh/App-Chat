<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w1"
    tools:context=".UpStory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_story"
            android:backgroundTint="@color/white"
            android:background="#2FFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName"
            android:textColorHint="#B7FFFFFF"
            android:hint="What are you thinking ??" />

        <ImageView
            android:id="@+id/story_image_show"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/Select_image"
   android:backgroundTint="#61FFFFFF"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select image for your story" />

        <Button
            android:id="@+id/btn_share"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Share" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>